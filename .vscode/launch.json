{
    "configurations": [
        {
            "name": "cppclient-linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "pyserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/pyserver.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "pyclient",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/pyclient.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "version": "2.0.0"
}
